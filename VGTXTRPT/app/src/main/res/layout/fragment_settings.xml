<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/MediumVioletRed"
                android:gravity="center"
                android:text="Application Settings"
                android:textSize="30dp"
                android:fontFamily="@font/orienta"
                android:textStyle="bold"
                ></TextView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                >

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:padding="10dp"
                    android:layout_gravity="fill"
                    >

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_columnSpan="3"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orienta"
                        android:hint="SQL Server Host">

                        <!--this is the actual edit text which takes the input-->
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/host"
                            android:maxLines="1"
                            android:inputType="text"
                            android:textColor="@color/DarkBlue"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/orienta"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_columnSpan="3"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orienta"
                        android:hint="Database Name">

                        <!--this is the actual edit text which takes the input-->
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dbname"
                            android:maxLines="1"
                            android:textColor="@color/DarkBlue"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/orienta"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>
                </GridLayout>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:layout_gravity="center"
                    android:textColor="@color/White"
                    android:backgroundTint="@color/MediumBlue"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:drawableLeft="@drawable/baseline_save_24"
                    android:id="@+id/testButton"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>