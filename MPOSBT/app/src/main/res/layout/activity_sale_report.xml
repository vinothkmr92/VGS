<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Ivory"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context=".SaleReportActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:focusable="false">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="SALES REPORTS"
                android:textAlignment="center"
                android:textColor="@color/Crimson"
                android:textSize="25dp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/btnDeleteAllSale"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:layout_gravity="right"
                android:background="@drawable/baseline_delete_24"
                android:foreground="?android:attr/selectableItemBackground"></ImageButton>
        </LinearLayout>
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:columnCount="2"
        android:orientation="horizontal"
        android:padding="20px">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/salerptFrmDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/editdate"
                android:drawableRight="@drawable/ic_baseline_date_range_24"
                android:text="Date"
                android:textAlignment="center"
                android:textColor="@color/DarkViolet"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/salerptToDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/editdate"
                android:drawableRight="@drawable/ic_baseline_date_range_24"
                android:text="Date"
                android:textAlignment="center"
                android:textColor="@color/DarkViolet"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

    </GridLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:orientation="horizontal"
        android:padding="20px">

        <TextView
            android:id="@+id/customerinfosaleRpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@android:drawable/editbox_background"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:hint="Select Customer"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnsalerptprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:drawableLeft="@drawable/ic_baseline_print_24"
            android:text="Print"
            android:textColor="@color/iconColor"
            android:foreground="?android:attr/selectableItemBackground">
        </Button>
        <Button
            android:id="@+id/btnshareExcel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:drawableLeft="@drawable/baseline_share_24"
            android:text="Export"
            android:foreground="?android:attr/selectableItemBackground"
            android:textColor="@color/iconColor">
        </Button>
    </GridLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_gravity="center"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/White"
        android:orientation="vertical"
        android:id="@+id/layoutSaleAmt">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Indigo"
            android:text="TOTAL AMOUNT"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp">
        </TextView>
        <TextView
            android:id="@+id/totalSaleAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â‚¹ 000"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/DarkViolet"
            android:textSize="40dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Indigo"
            android:text="TOTAL QUANTITY"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp">
        </TextView>
        <TextView
            android:id="@+id/saleRptTQty"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/DarkViolet"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/saleprtContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>