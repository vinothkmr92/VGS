<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/salerpt_Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            >
<GridLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill"
    android:background="@android:color/white"
    android:columnCount="3"
    android:padding="5dp"
    android:orientation="horizontal"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/orienta"
        android:text="ID"
        android:textColor="@android:color/black"
        android:textSize="15dp"></TextView>

    <TextView
        android:id="@+id/salecart_customerid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/orienta"
        android:text="1"
        android:textColor="@color/DarkBlue"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>
    <ImageButton android:id="@+id/salecart_print"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="@drawable/ic_baseline_print_24"
        android:foreground="?android:attr/selectableItemBackground"></ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/orienta"
        android:text="Name"
        android:textColor="@android:color/black"
        android:textSize="15dp"></TextView>

    <TextView
        android:id="@+id/salecart_customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/orienta"
        android:text="26-03-2024"
        android:textColor="@color/DarkBlue"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>
    <ImageButton
        android:id="@+id/salecart_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="@drawable/baseline_delete_24"
        android:foreground="?android:attr/selectableItemBackground"></ImageButton>


    <TextView
        android:id="@+id/salecart_totalQt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:fontFamily="@font/orienta"
        android:gravity="center"
        android:text="123"
        android:textColor="@color/CornflowerBlue"
        android:textSize="35dp"
        android:textStyle="bold"></TextView>
</GridLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>