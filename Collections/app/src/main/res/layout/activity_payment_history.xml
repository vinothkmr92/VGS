<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentHistoryActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/histHome"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/memNameViewHist"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:fontFamily="@font/orienta"
            android:textColor="@color/SandyBrown"
            android:textStyle="bold"
            android:text="MEMBER NAME">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loanNoViewHist"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:fontFamily="@font/orienta"
            android:textColor="@color/Brown"
            android:textStyle="bold"
            android:text="MEMBER NAME">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="15dp"
            android:fontFamily="@font/orienta"
            android:textColor="@color/BlueViolet"
            android:textStyle="bold"
            android:text="Payments History">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:id="@+id/totalpaidAmt"
            android:fontFamily="@font/orienta"
            android:textColor="@color/DarkGreen"
            android:textStyle="bold"
            android:text="0">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="center"
        android:id="@+id/payoptionLayout"
        android:layout_below="@id/histHome"
        android:layout_height="wrap_content">
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Principal"
            android:textStyle="bold"
            android:fontFamily="@font/orienta"
            android:id="@+id/principalPay"
            android:textSize="15dp"
            android:textColor="@color/DarkOrange"
            ></com.google.android.material.radiobutton.MaterialRadioButton>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest"
            android:textStyle="bold"
            android:fontFamily="@font/orienta"
            android:textSize="15dp"
            android:id="@+id/intesetPay"
            android:checked="true"
            android:textColor="@color/Orchid"
            ></com.google.android.material.radiobutton.MaterialRadioButton>
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/payoptionLayout">
        <LinearLayout
            android:id="@+id/viewHist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
</RelativeLayout>