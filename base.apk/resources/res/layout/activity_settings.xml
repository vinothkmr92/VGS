<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@android:color/holo_orange_dark" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="SQL SERVER NAME"/>
                    <EditText android:textSize="15dp" android:id="@+id/host" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="80px" android:hint="Enter SQL Server Name" android:maxLines="1" android:selectAllOnFocus="true" android:inputType="text"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="50px">
                    <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@android:color/holo_orange_dark" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="SQL USERNAME"/>
                    <EditText android:textSize="15dp" android:id="@+id/username" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="150px" android:hint="Enter SQL User" android:maxLines="1" android:selectAllOnFocus="true" android:inputType="text"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="50px">
                    <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@android:color/holo_orange_dark" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="SQL PASSWORD"/>
                    <EditText android:textSize="15dp" android:id="@+id/password" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="150px" android:hint="SQL Password" android:maxLines="1" android:selectAllOnFocus="true" android:inputType="textPassword"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="50px">
                    <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@android:color/holo_orange_dark" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="DATABASE NAME"/>
                    <EditText android:textSize="15dp" android:id="@+id/dbname" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="100px" android:hint="SQL Database Name" android:maxLines="1" android:selectAllOnFocus="true" android:inputType="text"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="50px">
                    <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@android:color/holo_orange_dark" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="BT DEVICE NAME"/>
                    <EditText android:textSize="15dp" android:id="@+id/btname" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="100px" android:hint="BT DEVICE NAME" android:maxLines="1" android:selectAllOnFocus="true" android:inputType="text"/>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="80px">
                    <Button android:id="@+id/testButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Test Connection"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
