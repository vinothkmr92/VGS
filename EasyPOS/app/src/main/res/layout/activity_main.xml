<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">
<GridLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:orientation="horizontal"
    tools:ignore="MissingConstraints">
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/printbtn"
        android:text="Print">

    </Button>
    <TextView android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="993434"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_columnSpan="2"></TextView>
</GridLayout>

        <ScrollView
            android:id="@+id/scrollviews"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name">

            <GridLayout
                android:id="@+id/gridData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:padding="10dp"
                tools:ignore="MissingConstraints">

                <TextView
                    android:padding="20dp"
                    android:text="Sno"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:padding="20dp"
                    android:text="Unit Price"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:padding="20dp"
                    android:text="Quantity"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:padding="20dp"
                    android:text="Amount"
                    android:textStyle="bold"></TextView>
            </GridLayout>
        </ScrollView>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1000px"
            android:columnCount="2"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="3"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:text="Price"
                    android:textAlignment="center"
                    android:textStyle="bold"></TextView>

                <Button
                    android:id="@+id/nine"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="9"></Button>

                <Button
                    android:id="@+id/eight"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="8"></Button>

                <Button
                    android:id="@+id/seven"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="7"></Button>

                <Button
                    android:id="@+id/six"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="6"></Button>

                <Button
                    android:id="@+id/five"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="5"></Button>

                <Button
                    android:id="@+id/four"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="4"></Button>

                <Button
                    android:id="@+id/three"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="3"></Button>

                <Button
                    android:id="@+id/two"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="2"></Button>

                <Button
                    android:id="@+id/one"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="1"></Button>

                <Button
                    android:id="@+id/backspaceprice"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="⌫"></Button>

                <Button
                    android:id="@+id/zero"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="0"></Button>

                <Button
                    android:id="@+id/dot"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="."></Button>
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="80px"
                android:columnCount="3"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill"
                    android:text="Quantity"
                    android:textAlignment="center"
                    android:textStyle="bold"></TextView>

                <Button
                    android:id="@+id/nineqty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="9"></Button>

                <Button
                    android:id="@+id/eightqty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="8"></Button>

                <Button
                    android:id="@+id/sevenqty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="7"></Button>

                <Button
                    android:id="@+id/sixqty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="6"></Button>

                <Button
                    android:id="@+id/fiveqty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="5"></Button>

                <Button
                    android:id="@+id/fourqty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="4"></Button>

                <Button
                    android:id="@+id/threeqty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="3"></Button>

                <Button
                    android:id="@+id/twoqty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="2"></Button>

                <Button
                    android:id="@+id/oneqty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="1"></Button>

                <Button
                    android:id="@+id/backspaceqty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="⌫"></Button>

                <Button
                    android:id="@+id/zeroqty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="0"></Button>

                <Button
                    android:id="@+id/dotqty"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="."></Button>
            </GridLayout>
        </GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>