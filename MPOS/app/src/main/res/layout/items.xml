<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/LightBlue"
    android:layout_height="match_parent">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/saleItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/saleItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="4"
                    android:textAlignment="center"
                    android:text="Produt Name"
                    android:textAllCaps="true"
                    android:textColor="@color/DarkBlue"
                    android:textStyle="bold"></TextView>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left">
                        <TextView
                            android:id="@+id/saleItemRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orienta"
                            android:text="399"
                            android:textColor="@color/Black"
                            android:textSize="30dp"
                            android:gravity="left"
                            android:textAlignment="gravity"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="right">
                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/btnRemoveItem"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:background="@drawable/baseline_remove_circle_24">
                        </ImageButton>

                        <TextView
                            android:id="@+id/saleItemQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orienta"
                            android:text="0"
                            android:textColor="@color/MediumVioletRed"
                            android:textSize="15dp"
                            android:textAlignment="center"
                            android:textStyle="bold"></TextView>

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/btnAddItem"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:background="@drawable/baseline_add_circle_24">
                        </ImageButton>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
</RelativeLayout>