<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Widget.ActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- ... -->
    </style>
    <style name="Widget.ActionBar.Logo">
        <item name="android:logo">@mipmap/evergreen</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>
    <style name="Theme.AnApp" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- ... -->
    </style>
    <style name="Theme.AnApp.Logo">
        <item name="android:actionBarStyle">@style/Widget.ActionBar.Logo</item>
        <!-- ... -->
    </style>
</resources>
