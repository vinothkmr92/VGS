<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vinoth.evergrn.Settings">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        xmlns:android="http://schemas.android.com/apk/res/android">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="SQL SERVER NAME"
                    android:textSize="15dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80px"
                    android:inputType="text"
                    android:maxLines="1"
                    android:id="@+id/host"
                    android:textSize="15dp"
                    android:selectAllOnFocus="true"
                    android:hint="Enter SQL Server Name" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="50px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="SQL USERNAME"
                    android:textSize="15dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="bold" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:selectAllOnFocus="true"
                    android:layout_marginLeft="150px"
                    android:maxLines="1"
                    android:id="@+id/username"
                    android:hint="Enter SQL User" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="50px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="SQL PASSWORD"
                        android:textSize="15dp"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textStyle="bold" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="150px"
                        android:textSize="15dp"
                        android:maxLines="1"
                        android:selectAllOnFocus="true"
                        android:id="@+id/password"
                        android:hint="SQL Password"
                        android:inputType="textPassword"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="50px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="DATABASE NAME"
                        android:textSize="15dp"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textStyle="bold" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="100px"
                        android:textSize="15dp"
                        android:inputType="text"
                        android:selectAllOnFocus="true"
                        android:maxLines="1"
                        android:id="@+id/dbname"
                        android:hint="SQL Database Name"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="50px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="BT DEVICE NAME"
                        android:textSize="15dp"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textStyle="bold" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="100px"
                        android:textSize="15dp"
                        android:inputType="text"
                        android:selectAllOnFocus="true"
                        android:maxLines="1"
                        android:id="@+id/btname"
                        android:hint="BT DEVICE NAME"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="80px">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test Connection"
                        android:id="@+id/testButton"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
