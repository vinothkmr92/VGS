<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KotActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                android:id="@+id/topB"
                app:cardBackgroundColor="@color/White"
                android:layout_gravity="center"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:id="@+id/billnoTxt"
                        android:text="1"
                        android:padding="8dp"
                        android:textColor="@color/Red"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:typeface="monospace" />
                    <TextView
                        android:id="@+id/counterInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:background="@android:drawable/editbox_background"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_down_24"
                        android:fontFamily="@font/orienta"
                        android:hint="Select Table"
                        android:textColor="@android:color/black" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/orienta"
                            android:text="ITEM NO"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@android:color/background_dark"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/itemNo"
                            android:layout_weight="0.3"
                            android:layout_marginLeft="20dp"
                            android:editable="false"
                            android:focusable="true"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@color/DarkViolet"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/orienta"
                        android:text="ITEM NAME"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@android:color/background_dark" />

                    <EditText
                        android:id="@+id/itemName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.55"
                        android:fontFamily="@font/orienta"
                        android:imeOptions="actionNext"
                        android:inputType="textCapCharacters"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/DarkViolet"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:fontFamily="sans-serif"
                            android:text="QUANTITY"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@android:color/background_dark" />

                        <EditText
                            android:id="@+id/qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:layout_weight="0.4"
                            android:focusable="true"
                            android:fontFamily="@font/orienta"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@color/DarkViolet"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/kotCartlayout"
                    android:padding="10dp"
                    android:orientation="vertical"
                    >
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/LightGrey"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:backgroundTint="@color/Ivory"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="1"
                        android:textColor="@color/Blue"
                        android:textSize="@dimen/numericSize"

                        />
                    <Button
                        android:id="@+id/_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:backgroundTint="@color/Ivory"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="2"
                        android:textColor="@color/Blue"
                        android:textSize="@dimen/numericSize"
                        />

                    <Button
                        android:id="@+id/_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:backgroundTint="@color/Ivory"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="3"
                        android:textColor="@color/Blue"
                        android:textSize="@dimen/numericSize"
                        />
                    <Button
                        android:id="@+id/_clr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:backgroundTint="@color/Ivory"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="←"
                        android:textColor="@color/Blue"
                        android:textSize="@dimen/numericSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:backgroundTint="@color/Ivory"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="4"
                        android:textColor="@color/Blue"
                        android:textSize="@dimen/numericSize"
                        />

                    <Button
                        android:id="@+id/_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:backgroundTint="@color/Ivory"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="5"
                        android:textColor="@color/Blue"
                        android:textSize="@dimen/numericSize"
                        />

                    <Button
                        android:id="@+id/_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:backgroundTint="@color/Ivory"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="6"
                        android:textColor="@color/Blue"
                        android:textSize="@dimen/numericSize"
                        />

                    <Button
                        android:id="@+id/_dot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:backgroundTint="@color/Ivory"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="."
                        android:textAlignment="center"
                        android:textColor="@color/Blue"
                        android:textSize="@dimen/numericSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:backgroundTint="@color/Ivory"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="7"
                        android:textColor="@color/Blue"
                        android:textSize="@dimen/numericSize"
                        />
                    <Button
                        android:id="@+id/_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:backgroundTint="@color/Ivory"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="8"
                        android:textColor="@color/Blue"
                        android:textSize="@dimen/numericSize"
                        />

                    <Button
                        android:id="@+id/_9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:backgroundTint="@color/Ivory"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="9"
                        android:textColor="@color/Blue"
                        android:textSize="@dimen/numericSize"
                        />

                    <Button
                        android:id="@+id/_0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:backgroundTint="@color/Ivory"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/Blue"
                        android:textSize="@dimen/numericSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/menu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:backgroundTint="@android:color/holo_orange_light"
                                android:drawableLeft="@drawable/baseline_receipt_long_24"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:text="REPORT"
                                android:textColor="@android:color/background_light"
                                android:textSize="8dp"
                                tools:ignore="TextContrastCheck" />

                            <Button
                                android:id="@+id/cancel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:backgroundTint="@color/SandyBrown"
                                android:drawableRight="@drawable/baseline_delete_24"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:text="CANCEL"
                                android:textColor="@android:color/background_light"
                                android:textSize="8dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/viewitems"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:backgroundTint="@color/DarkKhaki"
                                android:drawableLeft="@drawable/baseline_shopping_cart_24"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:text="VIEW ITEMS"
                                android:textColor="@color/White"
                                android:textSize="15dp"
                                />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/White"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/print"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_rowSpan="2"
                                android:layout_gravity="fill"
                                android:layout_weight="0.25"
                                android:background="@drawable/baseline_print_24"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:textSize="20dp"
                                />

                            <Button
                                android:id="@+id/enter"
                                style="@style/Widget.MaterialComponents.Button"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_rowSpan="2"
                                android:layout_gravity="fill"
                                android:layout_weight="0.25"
                                android:backgroundTint="@color/Indigo"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:text="ENTER"
                                android:textColor="@android:color/background_light"
                                android:textSize="18dp"
                                />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>