<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".KotFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.8"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                android:id="@+id/topB"
                app:cardBackgroundColor="@color/White"
                android:layout_gravity="center"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:id="@+id/kotNoTxt"
                        android:text="1"
                        android:padding="8dp"
                        android:textColor="@color/Red"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:typeface="monospace" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="0.4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/kotTb"
                        android:hint="Dine-in Table"
                        android:textColorHint="@color/Indigo"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:padding="10dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                        <AutoCompleteTextView
                            android:id="@+id/kotTables"
                            android:layout_width="match_parent"
                            android:textColor="@color/DarkBlue"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orienta"
                            android:inputType="none"></AutoCompleteTextView>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:fontFamily="@font/orienta"
                        android:text="CATEOGRY"
                        android:textStyle="bold"
                        android:textFontWeight="10"
                        android:textColor="@color/DarkViolet"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/catEditText"
                            android:layout_gravity="bottom"
                            android:layout_weight="0.3"
                            android:editable="false"
                            android:focusable="false"
                            android:textColor="@color/Black"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            />
                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/btnCatSearch"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:background="@drawable/baseline_edit_square_24">
                        </ImageButton>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:fontFamily="@font/orienta"
                        android:text="PRODUCT NAME"
                        android:textStyle="bold"
                        android:textFontWeight="10"
                        android:textColor="@color/DarkViolet"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/prNameEditText"
                            android:layout_gravity="bottom"
                            android:layout_weight="0.3"
                            android:editable="false"
                            android:focusable="false"
                            android:textColor="@color/Black"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            />
                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/btnPrSearch"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:background="@drawable/baseline_edit_square_24">
                        </ImageButton>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:id="@+id/btnPrAdd"
                            android:text="ADD"
                            android:foreground="?android:attr/selectableItemBackground">
                        </Button>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/kotCartlayout"
                    android:padding="2dp"
                    android:orientation="vertical"
                    >
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.2">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/closeTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:drawableLeft="@drawable/baseline_receipt_long_24"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="CLOSE TABLE"
                    android:textColor="@android:color/background_light"
                    android:textSize="10dp"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:backgroundTint="@color/SandyBrown"
                    android:drawableRight="@drawable/baseline_delete_24"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="CANCEL"
                    android:textColor="@android:color/background_light"
                    android:textSize="10dp"
                    />
                <Button
                    android:id="@+id/print"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"
                    android:textColor="@color/White"
                    android:backgroundTint="@color/Purple"
                    android:text="Print"
                    android:drawableLeft="@drawable/baseline_print_24"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:textSize="20dp"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>