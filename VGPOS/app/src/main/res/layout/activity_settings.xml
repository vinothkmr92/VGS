<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/Khaki"
    android:orientation="vertical"
    tools:context=".SettingsActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/MediumVioletRed"
        android:gravity="center"
        android:text="Application Settings"
        android:textSize="30dp"
        android:fontFamily="@font/orienta"
        android:textStyle="bold"
        ></TextView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        >

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="10dp"
            android:layout_gravity="fill"
            >

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_columnSpan="3"
                android:layout_height="wrap_content"
                android:fontFamily="@font/orienta"
                android:hint="SQL Server Host">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/host"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="@color/DarkBlue"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/orienta"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_columnSpan="3"
                android:layout_height="wrap_content"
                android:fontFamily="@font/orienta"
                android:hint="Database Name">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dbname"
                    android:maxLines="1"
                    android:textColor="@color/DarkBlue"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/orienta"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_columnSpan="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:id="@+id/defaultBranch"
                android:hint="Default Branch"
                android:fontFamily="@font/orienta"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/branches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/orienta"
                    android:inputType="none"></AutoCompleteTextView>
            </com.google.android.material.textfield.TextInputLayout>
        </GridLayout>
    </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"

                app:cardElevation="5dp"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    >
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:textColor="@color/DarkBlue"
                        android:text="Printing Options - SALE"
                        android:textSize="20dp"
                        android:fontFamily="@font/orienta"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        ></TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/radioBtnNoPrinter"
                            android:text="None"
                            android:fontFamily="@font/orienta"
                            android:textColor="@color/colorAccent"
                            ></com.google.android.material.radiobutton.MaterialRadioButton>
                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/radioBtnWifiPrinter"
                            android:text="WiFi"
                            android:fontFamily="@font/orienta"
                            android:textColor="@color/colorAccent"
                            ></com.google.android.material.radiobutton.MaterialRadioButton>
                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/radioBtnBlueToothPrinter"
                            android:text="Bluetooth"
                            android:fontFamily="@font/orienta"
                            android:textColor="@color/colorAccent"
                            ></com.google.android.material.radiobutton.MaterialRadioButton>
                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioBtnUSBPrinter"
                            android:fontFamily="@font/orienta"
                            android:textColor="@color/colorAccent"
                            android:text="USB"></com.google.android.material.radiobutton.MaterialRadioButton>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_columnSpan="3"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orienta"
                        android:id="@+id/wifiprinterlayout"
                        android:hint="WiFi Printer IP">

                        <!--this is the actual edit text which takes the input-->
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/printerip"
                            android:maxLines="1"
                            android:textColor="@color/DarkBlue"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/orienta"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_columnSpan="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:id="@+id/printer"
                        android:hint="Bluetooth Printer"
                        android:fontFamily="@font/orienta"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/printers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orienta"
                            android:inputType="none"></AutoCompleteTextView>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_columnSpan="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:id="@+id/usbprinter"
                        android:hint="USB Printer"
                        android:fontFamily="@font/orienta"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/usbprinters"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orienta"
                            android:inputType="none"></AutoCompleteTextView>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/kotprintoptions"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    >
                    <TextView android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:textColor="@color/DarkBlue"
                        android:text="Printing Options - KOT"
                        android:textSize="20dp"
                        android:fontFamily="@font/orienta"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        ></TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/radioBtnNoPrinterKot"
                            android:text="None"
                            android:fontFamily="@font/orienta"
                            android:textColor="@color/colorAccent"
                            ></com.google.android.material.radiobutton.MaterialRadioButton>
                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/radioBtnWifiPrinterKot"
                            android:text="WiFi"
                            android:fontFamily="@font/orienta"
                            android:textColor="@color/colorAccent"
                            ></com.google.android.material.radiobutton.MaterialRadioButton>
                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/radioBtnBlueToothPrinterKot"
                            android:text="Bluetooth"
                            android:fontFamily="@font/orienta"
                            android:textColor="@color/colorAccent"
                            ></com.google.android.material.radiobutton.MaterialRadioButton>
                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioBtnUSBPrinterKot"
                            android:fontFamily="@font/orienta"
                            android:textColor="@color/colorAccent"
                            android:text="USB"></com.google.android.material.radiobutton.MaterialRadioButton>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_columnSpan="3"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/orienta"
                        android:id="@+id/wifiprinterlayoutKot"
                        android:hint="WiFi Printer IP">

                        <!--this is the actual edit text which takes the input-->
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/printeripkot"
                            android:maxLines="1"
                            android:textColor="@color/DarkBlue"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/orienta"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_columnSpan="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:id="@+id/printerkot"
                        android:hint="Bluetooth Printer"
                        android:fontFamily="@font/orienta"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/printerskot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orienta"
                            android:inputType="none"></AutoCompleteTextView>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_columnSpan="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:id="@+id/usbprinterkot"
                        android:hint="USB Printer"
                        android:fontFamily="@font/orienta"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/usbprinterskot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orienta"
                            android:inputType="none"></AutoCompleteTextView>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        android:id="@+id/printerSettingsCard"
                        >
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            >
                            <TextView android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:textColor="@color/Crimson"
                                android:text="Printer Settings"
                                android:textSize="15dp"
                                android:fontFamily="@font/orienta"
                                android:textAlignment="center"
                                android:textStyle="bold|italic"
                                ></TextView>
                    <LinearLayout android:layout_gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/headerfooterLayout"
                        android:orientation="vertical"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_columnSpan="3"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orienta"
                            android:hint="Receipt Header">

                            <!--this is the actual edit text which takes the input-->
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/header"
                                android:maxLines="1"
                                android:inputType="text"
                                android:textColor="@color/DarkBlue"
                                android:layout_width="match_parent"
                                android:fontFamily="@font/orienta"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_columnSpan="3"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orienta"
                            android:hint="Address">

                            <!--this is the actual edit text which takes the input-->
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/address"
                                android:textColor="@color/DarkBlue"
                                android:layout_width="match_parent"
                                android:fontFamily="@font/orienta"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_columnSpan="3"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/orienta"
                            android:hint="Receipt Footer">

                            <!--this is the actual edit text which takes the input-->
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/footer"
                                android:maxLines="1"
                                android:inputType="text"
                                android:textColor="@color/DarkBlue"
                                android:layout_width="match_parent"
                                android:fontFamily="@font/orienta"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            android:id="@+id/rptsizeLayout"
            >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical"
            >
            <TextView android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:textColor="@color/DarkBlue"
                android:text="Receipt Size"
                android:textSize="20dp"
                android:fontFamily="@font/orienta"
                android:id="@+id/rptsizeTxtView"
                android:textAlignment="center"
                android:textStyle="bold"
                ></TextView>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center">
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/radioBtnrptSize2Inch"
                    android:text="2 - Inches"
                    android:fontFamily="@font/orienta"
                    android:textColor="@color/colorAccent"
                    ></com.google.android.material.radiobutton.MaterialRadioButton>
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/radioBtnrptSize3Inch"
                    android:text="3 - Inches"
                    android:fontFamily="@font/orienta"
                    android:textColor="@color/colorAccent"
                    ></com.google.android.material.radiobutton.MaterialRadioButton>
            </LinearLayout>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/multilangswitch"
                android:text="Multi Language for Printing"
                android:textColor="@color/Crimson"
                >
            </com.google.android.material.switchmaterial.SwitchMaterial>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/enableKot"
                android:text="Enable KOT"
                android:textColor="@color/Crimson"
                >
            </com.google.android.material.switchmaterial.SwitchMaterial>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mrpLayout"
                android:layout_gravity="center">
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:id="@+id/includeMRP"
                    android:text="Receipt with MRP"
                    android:fontFamily="@font/orienta"
                    android:textColor="@color/colorAccent"
                    ></com.google.android.material.switchmaterial.SwitchMaterial>
            </LinearLayout>
        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_columnSpan="3"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/baseline_save_24"
                android:id="@+id/testButton"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>