<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ItemReport">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="From Date"/>
        <TextView
            android:id="@+id/itemrptFrmDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="50px"
            android:text="Date"
            android:textAlignment="center"
            android:textStyle="bold" />
        <ImageButton
            android:layout_width="100px"
            android:layout_height="100px"
            android:id="@+id/btndpFrmDateItem"
            android:layout_columnSpan="2"
            android:layout_marginLeft="50px"
            android:background="@drawable/ic_baseline_date_range_24"></ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="To Date"/>
        <TextView
            android:id="@+id/itemrptToDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="50px"
            android:text="Date"
            android:textAlignment="center"
            android:textStyle="bold" />
        <ImageButton
            android:layout_width="100px"
            android:layout_height="100px"
            android:id="@+id/btndpToDateItem"
            android:layout_marginLeft="50px"
            android:background="@drawable/ic_baseline_date_range_24"></ImageButton>
        <CheckBox
            android:id="@+id/stocksRpt"
            android:checked="false"
            android:padding="20px"
            android:text="Stocks Report"
            android:textColor="@color/colorRed"
            android:textStyle="bold|italic"></CheckBox>
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/customerinfoitemwise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:gravity="center_vertical"
            android:hint="Select Customer"
            android:padding="12dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GetReport"
            android:id="@+id/btngetreport">
        </Button>
        <ImageButton
            android:layout_width="150px"
            android:layout_height="150px"
            android:text="Print"
            android:background="@drawable/ic_baseline_print_24"
            android:id="@+id/btnrptprint"></ImageButton>
        <ImageButton
            android:id="@+id/btnshareExcel"
            android:layout_width="150px"
            android:layout_height="150px"
            android:background="@drawable/baseline_share_24">
        </ImageButton>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:paddingTop="150dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/ttAmtPrdReport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="â‚¹ 000"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="50dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="200dp"
        android:paddingTop="40dp"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/app_name"
            android:fillViewport="true"
            android:nestedScrollingEnabled="true"
            tools:ignore="MissingConstraints">

            <GridLayout
                android:id="@+id/gridDataRpt"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:columnCount="4"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="10px"
                    android:text="ID"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"></TextView>


                <TextView
                    android:text="ITEM NAME                               "
                    android:textColor="@android:color/black"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:padding="10px"
                    android:text="QTY"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="10px"
                    android:text="AMT"
                    android:textAlignment="viewEnd"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"></TextView>

            </GridLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>