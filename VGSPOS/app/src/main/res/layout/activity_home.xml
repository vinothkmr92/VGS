<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".HomeActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_gravity="fill"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/billnoTxt"
            android:text="1"
            android:padding="15dp"
            android:textColor="@color/colorRed"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/customerInfoTxtView"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:hint="Select Customer"
            android:padding="10dp" />
        <ImageButton
            android:id="@+id/btnAddMember"
            android:layout_width="150px"
            android:layout_height="150px"
            android:background="@drawable/ic_baseline_person_add_24"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="TouchTargetSizeCheck"></ImageButton>

        <CheckBox
            android:id="@+id/isAC"
            android:text="AC"
            android:padding="15dp"
            android:textStyle="bold|italic"></CheckBox>

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_marginLeft="10dp"
        android:columnCount="3"
        android:orientation="horizontal">
        <TextView
            android:text="ITEM NO"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/itemNo"
            android:editable="false"
            android:layout_marginLeft="20dp"
            android:focusable="true"
            android:minWidth="500px"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_dark"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        <Button
            android:id="@+id/scanQR"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/barcode"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="TouchTargetSizeCheck" />
        <TextView
            android:text="ITEM NAME"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/itemName"
            android:layout_columnSpan="2"
            android:layout_marginLeft="20dp"
            android:imeOptions="actionNext"
            android:minWidth="700px"
            android:inputType="textCapCharacters"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_dark"/>
        <TextView
            android:text="PRICE"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/itemPrice"
            android:layout_columnSpan="2"
            android:editable="false"
            android:layout_marginLeft="20dp"
            android:focusable="true"
            android:minWidth="700px"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_dark"

            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        <TextView
            android:text="QUANTITY"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/qty"
            android:layout_columnSpan="2"
            android:editable="false"
            android:focusable="true"
            android:layout_marginLeft="20dp"
            android:minWidth="700px"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_dark"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </GridLayout>

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:text="TOTAL QTY:  "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ttQty"
                android:text="000     "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_dark"
                android:layout_columnSpan="2"
                android:textStyle="bold" />
            <TextView
                android:text="     TOTAL ITEMS:  "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ttItem"
                android:text="000   "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_dark"
                android:layout_columnSpan="2"
                android:textStyle="bold" />

        </GridLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DISCOUNT  (%)"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="italic|bold"></TextView>

                <EditText
                    android:id="@+id/discountpercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:editable="false"
                    android:focusable="true"
                    android:minWidth="150px"
                    android:textColor="@android:color/black"></EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="(₹)"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="italic|bold"></TextView>

                <EditText
                    android:id="@+id/discountamt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:editable="false"
                    android:focusable="true"
                    android:minWidth="200px"
                    android:textColor="@android:color/black"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/estimateAmt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_purple"
                    android:text="₹ 0"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@android:color/white"
                    android:textSize="60dp"
                    android:textStyle="bold" />
            </LinearLayout>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:columnCount="4"
            android:orientation="horizontal">
            <Button
                android:id="@+id/_1"
                android:background="@color/design_default_color_primary"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="1"
                android:textColor="@android:color/background_light"
                android:textSize="30dp"
                 />

            <Button
                android:id="@+id/_2"
                android:background="@android:color/background_light"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="2"
                android:textColor="@color/design_default_color_primary"
                android:textSize="30dp"
                 />

            <Button
                android:id="@+id/_3"
                android:background="@color/design_default_color_primary"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="3"
                android:textColor="@android:color/background_light"
                android:textSize="30dp"
                 />

            <Button
                android:id="@+id/_clr"
                android:background="@android:color/background_light"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="←"
                android:textColor="@color/design_default_color_primary"
                android:textSize="30dp"
                 />

            <Button
                android:id="@+id/_4"
                android:background="@android:color/background_light"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="4"
                android:textColor="@color/design_default_color_primary"
                android:textSize="30dp"
                 />

            <Button
                android:id="@+id/_5"
                android:background="@color/design_default_color_primary"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="5"
                android:textColor="@android:color/background_light"
                android:textSize="30dp"
                 />

            <Button
                android:id="@+id/_6"
                android:background="@android:color/background_light"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="6"
                android:textColor="@color/design_default_color_primary"
                android:textSize="30dp"
                 />

            <Button
                android:id="@+id/_dot"
                android:background="@color/design_default_color_primary"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="."
                android:textColor="@android:color/background_light"
                android:textSize="30dp"
                 />

            <Button
                android:id="@+id/_7"
                android:background="@color/design_default_color_primary"
                android:text="7"
                android:textColor="@android:color/background_light"
                android:foreground="?android:attr/selectableItemBackground"
                android:textSize="30dp"
                 />

            <Button
                android:id="@+id/_8"
                android:background="@android:color/background_light"
                android:text="8"
                android:textColor="@color/design_default_color_primary"
                android:foreground="?android:attr/selectableItemBackground"
                android:textSize="30dp"
                 />

            <Button
                android:id="@+id/_9"
                android:background="@color/design_default_color_primary"
                android:text="9"
                android:textColor="@android:color/background_light"
                android:foreground="?android:attr/selectableItemBackground"
                android:textSize="30dp"
                 />

            <Button
                android:id="@+id/_0"
                android:background="@android:color/background_light"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="0"
                android:textColor="@color/design_default_color_primary"
                android:textSize="30dp"
                 />

            <Button
                android:id="@+id/menu"
                android:background="@android:color/holo_orange_light"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="REPORT"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/cancel"
                android:background="?attr/colorError"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="CANCEL"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                 />

            <Button
                android:id="@+id/print"
                android:layout_rowSpan="2"
                android:layout_gravity="fill"
                android:background="?attr/actionModeSplitBackground"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="SAVE"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                 />

            <Button
                android:id="@+id/enter"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_rowSpan="2"
                android:layout_gravity="fill"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@android:color/holo_red_dark"
                android:text="ENTER"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                />

            <Button
                android:id="@+id/viewitems"
                style="@style/Widget.AppCompat.Button"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:background="@color/colorBrown"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="VIEW ITEMS"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                />
            <Button
                android:id="@+id/lblPrint"
                style="@style/Widget.AppCompat.Button"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:visibility="gone"
                android:background="@android:color/background_light"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="TESTBARCODE"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"
                />
        </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>