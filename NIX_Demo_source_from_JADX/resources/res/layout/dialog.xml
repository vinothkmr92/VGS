<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/saveFileDialog" android:layout_width="match_parent" android:layout_height="match_parent">
    <ListView android:id="@+id/fileList" android:padding="10dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/fileLinearLayout2" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/fileTextView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Enter file name:"/>
        <EditText android:id="@+id/fileName" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="text" android:contentDescription="Enter file name:"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/fileLinearLayout3" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/fileSaveLoad" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Save" android:layout_weight="1"/>
            <Button android:id="@+id/fileCancel" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Cancel" android:layout_weight="1"/>
            <Button android:id="@+id/newFolder" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="New Folder" android:layout_weight="1"/>
        </LinearLayout>
        <Spinner android:id="@+id/fileFilter" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
