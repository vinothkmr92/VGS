<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<EditText android:text="@string/msr_track1" 
    android:focusable="false" 
    android:cursorVisible="false" 
    android:id="@+id/EditTextTrack1" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:inputType="text"/>

<EditText android:text="@string/msr_track2" 
    android:focusable="false" 
    android:cursorVisible="false" 
    android:id="@+id/EditTextTrack2" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:inputType="text"/>

<EditText android:text="@string/msr_track3" 
    android:focusable="false"  
    android:cursorVisible="false" 
    android:id="@+id/EditTextTrack3" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:inputType="text"/>

<LinearLayout android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
<Spinner android:id="@+id/Spinner01" android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
<Button android:text="@string/msr_read_btn" android:id="@+id/ButtonMSR" android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="wrap_content"/>

</LinearLayout>
</LinearLayout>