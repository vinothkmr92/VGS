<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="HMS SCALEBAZZAR"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="25dp"
        android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="DATE: "
            android:layout_marginTop="10dp"
            android:id="@+id/dtDisplay"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20dp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:layout_marginTop="40dp"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="PRODUCT NAME: "
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="15dp"
                android:textStyle="bold" />
            <AutoCompleteTextView
                android:id="@+id/prName"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="15dp"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:minWidth="500dp"
                android:inputType="textCapCharacters"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                />

            <TextView
                android:id="@+id/wtEditor"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@android:color/black"
                android:text="0.000"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#C6FF00"
                android:textSize="115dp"
                android:textStyle="bold"
                app:fontFamily="@font/david_libre_bold" />
        </GridLayout>
        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/printBtn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/printer"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/colorAccent"
            android:text="SAVE AND PRINT"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>